<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="9dp"
    android:background="#fff">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Bem-vindo ao nosso aplicativo!"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#1a237e"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivFasd"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/unipharmus2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView71"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_setae" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/txtopcoes"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#1a237e"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout><!-- From: file:/Area/Cursos/Android/Projetos/AndroidStudioProjects/Unipharmus/app/src/main/res/layout/telahome.xml -->