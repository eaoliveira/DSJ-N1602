<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="9dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orçamento"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#1a237e"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="Preencha os dados para o envio do orçamento, e principalmente, os campos com asterisco obrigatórios."
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/edNome"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="#e8eaf6"
            android:ems="10"
            android:hint="@string/ohintnome"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/edNascimento"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="#e8eaf6"
            android:ems="10"
            android:hint="@string/ohintnasc"
            android:inputType="date"
            android:paddingLeft="8dp"
            android:numeric="integer"
            android:paddingRight="8dp" />

        <EditText
            android:id="@+id/edFone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="#e8eaf6"
            android:ems="10"
            android:hint="@string/ohinttelres"
            android:inputType="phone"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" />

        <EditText
            android:id="@+id/edCelular"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="#e8eaf6"
            android:ems="10"
            android:hint="@string/ohintcel"
            android:inputType="phone"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" />

        <EditText
            android:id="@+id/edEndereco"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="#e8eaf6"
            android:ems="10"
            android:hint="@string/ohintend"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" />

        <EditText
            android:id="@+id/edCidade"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="#e8eaf6"
            android:ems="10"
            android:hint="@string/ohintcidade"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" />

        <EditText
            android:id="@+id/edEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="#e8eaf6"
            android:ems="10"
            android:hint="@string/ohintemail"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" />

        <EditText
            android:id="@+id/edMensagem"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:background="#e8eaf6"
            android:ems="10"
            android:hint="@string/ohintmsg"
            android:inputType="textMultiLine"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" />

        <Button
            android:id="@+id/btENVIARrelatorio"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#1a237e"
            android:text="Enviar orçamento"
            android:textColor="#fff"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView><!-- From: file:/Area/Cursos/Android/Projetos/AndroidStudioProjects/Unipharmus/app/src/main/res/layout/telaorcamento.xml -->