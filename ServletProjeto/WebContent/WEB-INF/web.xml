<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>ServletProjeto</display-name>
	<servlet>
		<display-name>ThreeParams</display-name>
		<servlet-name>ThreeParams</servlet-name>
		<servlet-class>servlets.parms1.ThreeParams</servlet-class>
	</servlet>
	<servlet>
		<display-name>ApplesAndOranges</display-name>
		<servlet-name>ApplesAndOranges</servlet-name>
		<servlet-class>servlets.formats2.ApplesAndOranges</servlet-class>
	</servlet>
	<servlet>
		<display-name>ShadowedText</display-name>
		<servlet-name>ShadowedText</servlet-name>
		<servlet-class>servlets.formats2.ShadowedText</servlet-class>
	</servlet>
	<servlet>
		<display-name>RedirecionaObj</display-name>
		<servlet-name>RedirecionaObj</servlet-name>
		<servlet-class>servlets.beans4.RedirecionaObj</servlet-class>
	</servlet>
	<servlet>
		<display-name>ClientAccessCounts</display-name>
		<servlet-name>ClientAccessCounts</servlet-name>
		<servlet-class>servlets.cookies.ClientAccessCounts</servlet-class>
	</servlet>
	<servlet>
		<display-name>RegistrationServlet</display-name>
		<servlet-name>RegistrationServlet</servlet-name>
		<servlet-class>servlets.cookies.RegistrationServlet</servlet-class>
	</servlet>
	<servlet>
		<display-name>RegistrationForm</display-name>
		<servlet-name>RegistrationForm</servlet-name>
		<servlet-class>servlets.cookies.RegistrationForm</servlet-class>
	</servlet>
	<servlet>
		<display-name>RepeatVisitor</display-name>
		<servlet-name>RepeatVisitor</servlet-name>
		<servlet-class>servlets.cookies.RepeatVisitor</servlet-class>
	</servlet>
	<servlet>
		<display-name>WrongDestination</display-name>
		<servlet-name>WrongDestination</servlet-name>
		<servlet-class>servlets.redir3.WrongDestination</servlet-class>
	</servlet>
	<servlet>
		<display-name>ValidaDados</display-name>
		<servlet-name>ValidaDados</servlet-name>
		<servlet-class>servlets.beans4.ValidaDados</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ThreeParams</servlet-name>
		<url-pattern>/jsps/ThreeParams</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ApplesAndOranges</servlet-name>
		<url-pattern>/ApplesAndOranges.xls</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ShadowedText</servlet-name>
		<url-pattern>/ShadowedText</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RedirecionaObj</servlet-name>
		<url-pattern>/RedirecionaObj</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ClientAccessCounts</servlet-name>
		<url-pattern>/ClientAccessCounts</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RegistrationServlet</servlet-name>
		<url-pattern>/RegistrationServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RegistrationForm</servlet-name>
		<url-pattern>/RegistrationForm</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RepeatVisitor</servlet-name>
		<url-pattern>/RepeatVisitor</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>WrongDestination</servlet-name>
		<url-pattern>/WrongDestination</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ValidaDados</servlet-name>
		<url-pattern>/ValidaDados</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<error-page>
		<exception-type>java.net.ConnectException</exception-type>
		<location>/jsps/errorDb.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/jsps/errorConf.jsp</location>
	</error-page>
